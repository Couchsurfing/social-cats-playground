<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="Platform.Theme.SocialCatsAws" parent="android:Theme.Material.Light" />

    <style name="Base.Theme.SocialCatsAws" parent="Platform.Theme.SocialCatsAws">
        <item name="android:windowActionModeOverlay">true</item>
    </style>

    <style name="Theme.SocialCatsAws" parent="Base.Theme.SocialCatsAws" />


    <style name="Theme.SocialCatsAws.NoActionBar">
        <item name="android:windowActionBar">false</item>
        <item name="android:windowNoTitle">true</item>
    </style>

    <style name="Theme.SocialCatsAws.Immerse" parent="Theme.SocialCatsAws.NoActionBar">
        <item name="android:statusBarColor">@android:color/transparent</item>

        <item name="android:navigationBarColor">@color/nav_bar_scrim</item>
        <item name="android:windowLightNavigationBar" tools:targetApi="o_mr1">
            @bool/use_light_nav_bar
        </item>
    </style>

    <style name="Theme.SocialCatsAws.Home" parent="Theme.SocialCatsAws.Immerse">
        <item name="android:windowLightStatusBar">@bool/use_light_status_bar</item>
    </style>

</resources>
